<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>PiHome | {% block title %}Dashboard{% endblock %}</title>
	    <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
	    <link rel="stylesheet" href="{{ asset('js/amcharts/plugins/export/export.css') }}" type="text/css">
	    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" type="text/css">
	    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&subset=greek-ext" rel="stylesheet">
	    {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
	    <header>
		    <nav class="obal">
			    <i class="mobile--btn fa fa-bars" aria-hidden="true"></i>
			    <ul>
				    <li><a class="active" href="/"><i class="fa fa-newspaper-o" aria-hidden="true"></i> Dashboard</a></li>
			    </ul>
		    </nav>
	    </header>
	    <div class="obal">
		    {% block body %}{% endblock %}
	    </div>
	    <script type="text/javascript" src="//code.jquery.com/jquery-2.1.4.min.js"></script>
	    <script src="{{ asset('js/amcharts/amcharts.js') }}" type="text/javascript"></script>
	    <script src="{{ asset('js/amcharts/serial.js') }}" type="text/javascript"></script>
	    <script src="{{ asset('js/amcharts/plugins/dataloader/dataloader.min.js') }}" type="text/javascript"></script>
	    <script src="{{ asset('js/amcharts/plugins/export/export.min.js') }}"></script>

	    <script>
		    $("document").ready(function () {

			    var show = 0;

			    $(".mobile--btn").click(function () {

				    if(show == 0) {
					    $("header nav ul").slideDown();
					    show = 1;
				    }
				    else {
					    $("header nav ul").slideUp();
					    show = 0;
				    }
			    });
		    });

	    </script>

	    {% block javascripts %}{% endblock %}
    </body>
</html>
